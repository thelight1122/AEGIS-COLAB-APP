{
    "compilerOptions": {
        "target": "ES2022",
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "node",
            "vitest"
        ],
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force"
    },
    "include": [
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "tests/**/*.ts"
    ]
}